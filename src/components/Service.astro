---
const { icon, title, description } = Astro.props;
---

<div class="service">
  <img src={icon} alt={title} />
  <h3>{title}</h3>
  <p>{description}</p>
</div>

<style>
  .service {
    text-align: center;
    padding: 2rem;
    border-radius: 8px;
    background-color: white;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .service img {
    height: 50px;
    margin-bottom: 1rem;
  }

  .service h3 {
    margin-bottom: 0.5rem;
  }
</style>